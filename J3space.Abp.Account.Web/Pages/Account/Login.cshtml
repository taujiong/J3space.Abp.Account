@page
@model J3space.Abp.Account.Pages.Account.Login

@{
  Layout = null;
}

<!DOCTYPE html>
<html lang="zh-CN">

<head>
  <meta charset="utf-8">
  <title>高性能滑动的登录注册页面静态模板 - 代码库</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.2/css/all.min.css"
        rel="stylesheet">
  <link href="/Pages/Account/login.css"
        rel="stylesheet">
</head>
<!--/************************************************************
