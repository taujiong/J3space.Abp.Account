* 						      代码库							*
*                        www.dmaku.com							*
*       		  努力创建完善、持续更新插件以及模板			*
* 																*
**************************************************************-->
<body>
<div class="dowebok"
     id="dowebok">
  <div class="form-container sign-up-container">
    <form action="#">
      <h1>注册</h1>
      <div class="social-container">
        <a class="social"
           href="#">
          <i class="fab fa-facebook-f"></i>
        </a>
        <a class="social"
           href="#">
          <i class="fab fa-google-plus-g"></i>
        </a>
        <a class="social"
           href="#">
          <i class="fab fa-linkedin-in"></i>
        </a>
      </div>
      <span>或使用邮箱注册</span>
      <input placeholder="姓名"
             type="text">
      <input placeholder="电子邮箱"
             type="email">
      <input placeholder="密码"
             type="password">
      <button>注册</button>
    </form>
  </div>
  <div class="form-container sign-in-container">
    <form action="#">
      <h1>登录</h1>
      <div class="social-container">
        <a class="social"
           href="#">
          <i class="fab fa-facebook-f"></i>
        </a>
        <a class="social"
           href="#">
          <i class="fab fa-google-plus-g"></i>
        </a>
        <a class="social"
           href="#">
          <i class="fab fa-linkedin-in"></i>
        </a>
      </div>
      <span>或使用您的帐号</span>
      <input placeholder="电子邮箱"
             type="email">
      <input placeholder="密码"
             type="password">
      <a href="#">忘记密码？</a>
      <button>登录</button>
    </form>
  </div>
  <div class="overlay-container">
    <div class="overlay">
      <div class="overlay-left overlay-panel">
        <h1>已有帐号？</h1>
        <p>请使用您的帐号进行登录</p>
        <button class="ghost"
                id="signIn">
          登录
        </button>
      </div>
      <div class="overlay-panel overlay-right">
        <h1>没有帐号？</h1>
        <p>立即注册加入我们，和我们一起开始旅程吧</p>
        <button class="ghost"
                id="signUp">
          注册
        </button>
      </div>
    </div>
  </div>
</div>
<script src="/Pages/Account/login.js"></script>
</body>

</html>
