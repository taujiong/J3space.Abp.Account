@page
@model J3space.Abp.Account.Pages.Account.Login

@section style
{
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.2/css/all.min.css"
        rel="stylesheet">
  <link asp-append-version="true"
        href="/Pages/Account/login.css"
        rel="stylesheet">
}

<div class="container"
     id="container">
  <div class="form-container sign-up-container">
    <form method="post">
      <h1>@L["Register"]</h1>
      <div class="social-container">
        <a class="social"
           href="#">
          <i class="fab fa-facebook-f"></i>
        </a>
        <a class="social"
           href="#">
          <i class="fab fa-google-plus-g"></i>
        </a>
        <a class="social"
           href="#">
          <i class="fab fa-linkedin-in"></i>
        </a>
      </div>
      <span>@L["EmailForRegistration"]</span>
      <input asp-for="RegisterInput.UserName"
             placeholder="@L["UserName"]">
      <input asp-for="RegisterInput.EmailAddress"
             placeholder="@L["EmailAddress"]">
      <input asp-for="RegisterInput.Password"
             placeholder="@L["Password"]">
      <button name="Action"
              type="submit"
              value="Register">
        @L["Register"]
      </button>
    </form>
  </div>
  <div class="form-container sign-in-container">
    <form method="post">
      <h1>@L["Login"]</h1>
      <div class="social-container">
        <a class="social"
           href="#">
          <i class="fab fa-facebook-f"></i>
        </a>
        <a class="social"
           href="#">
          <i class="fab fa-google-plus-g"></i>
        </a>
        <a class="social"
           href="#">
          <i class="fab fa-linkedin-in"></i>
        </a>
      </div>
      <span>@L["LocalAccountForLogin"]</span>
      <input asp-for="ReturnUrl" />
      <input asp-for="ReturnUrlHash" />
      <input asp-for="LoginInput.UserNameOrEmailAddress"
             placeholder="@L["UserNameOrEmailAddress"]" />
      <input asp-for="LoginInput.Password"
             placeholder="@L["Password"]"
             type="password" />
      <label class="remember-label"
             for="remember-input">
        <input asp-for="LoginInput.RememberMe"
               id="remember-input"
               type="checkbox" />
        <span>@L["RememberMe"]</span>
      </label>
      <!-- TODO: 忘记密码 -->
      <button name="Action"
              type="submit"
              value="Login">
        @L["Login"]
      </button>
    </form>
  </div>
  <div class="overlay-container">
    <div class="overlay">
      <div class="overlay-left overlay-panel">
        <h1>@L["AlreadyRegistered"]</h1>
        <p>@L["LoginWithYourAccount"]</p>
        <button class="ghost"
                id="signIn">
          @L["Login"]
        </button>
      </div>
      <div class="overlay-panel overlay-right">
        <h1>@L["AreYouANewUser"]</h1>
        <p>@L["LoginInvitation"]</p>
        <button class="ghost"
                id="signUp">
          @L["Register"]
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  const signUpButton = document.getElementById('signUp');
  const signInButton = document.getElementById('signIn');
  const container = document.getElementById('container');

  signUpButton.addEventListener('click', function () {
    container.classList.add('right-panel-active')
  })

  signInButton.addEventListener('click', function () {
    container.classList.remove('right-panel-active')
  });
</script>
